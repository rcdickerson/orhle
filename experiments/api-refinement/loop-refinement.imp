  }

fun original() {
  sum := 0;
  while (sum <= 100) do
    // @inv { (= original!sum refinement!sum) }
    @var { (- 100 sum) }
    r := rand();
    sum := sum + r;
  end
  return sum;
}

fun refinement() {
  sum := 0;
  while (sum <= 100) do
    // @inv { (= original!sum refinement!sum) }
    r := randOdd();
    sum := sum + r;
  end
  return sum;
}
