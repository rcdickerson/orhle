expected: valid;

forall: refinement;
exists: original;

post: (= original!sum refinement!sum);

aspecs:
  randOdd() {
    post: (and (<= 0 c) (< c 5) (= ret! (+ (* 2 c) 1)));
  }

  rand() {
    post: (and (<= 0 ret!) (< ret! 10));
  }

especs:
  rand() {
    choiceVars: n;
    pre:  (and (<= 0 n) (< n 10));
