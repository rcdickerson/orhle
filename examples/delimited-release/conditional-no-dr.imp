// From https://www.cs.cornell.edu/andru/papers/isss03.pdf

expected: invalid;

forall: cond[1], cond[2];
exists: cond[3];

// High:
//   h1
//   h2
// Low:
//   l

pre: (and
       (= cond!1!h1 cond!3!h1)
       (= cond!1!h2 cond!3!h2)
       (= cond!1!l cond!2!l)
       (= cond!2!l cond!3!l));
post:  (= cond!2!ret cond!3!ret);

prog cond():
  if (l == 0) then
    ret := h1 % 2;
  else
    ret := h2 % 2;
  end
endp