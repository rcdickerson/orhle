// A program that sometimes (but not
// always) leaks high-security state.

expected: valid;

forall: run[1];
exists: run[2];

pre:  (= run!1!low run!2!low);
post: (= run!1!low run!2!low);

aspecs:
  randBnd(max) {
    pre:  true;
    post: (and (>= 0 ret!) (< ret! max));
  }

especs:
  randBnd(max) {
    templateVars: n;
    pre:  (and (>= 0 n) (< n max));
    post: (= ret! n);
  }

prog run(high, low):
  r := call randBnd(high);
  low := high + r;
endp